{
    "name": "sergekukharev/php-chef-client",
    "description": "Chef Client for PHP Applications",
    "type": "library",
    "require": {
      "php": ">=5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.8",
        "phpmd/phpmd": "^2.6"
    },
    "license": "Apache License 2.0",
    "authors": [
        {
            "name": "Serge Kukharev",
            "email": "serge.kukharev@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
        "build": [
            "@test",
            "@code-style",
            "@find-mess"
        ],
        "test": "./vendor/bin/phpunit",
        "code-style": "./vendor/bin/phpcs src/ --standard=PSR2",
        "find-mess": "./vendor/bin/phpmd src/ text cleancode,codesize,design,naming,unusedcode"
    }
}
